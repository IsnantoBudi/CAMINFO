<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_profile"
        tools:context=".Profile">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center_horizontal">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:srcCompat="@drawable/mhs" android:id="@+id/imageView"
                android:layout_marginTop="30dp"/>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="20dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical" android:gravity="center_horizontal">
                <TextView
                        android:text="@string/text_profile_kmapus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/text2" android:layout_marginTop="0dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>